---
import { MarkdocRenderer } from "@/components/markdoc-renderer";
import FormattedDate from "@/components/formatted-date.astro";
import type { NoteWithContent } from "@/data/post";
import type { HTMLTag, Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }> & {
	note: NoteWithContent;
	isPreview?: boolean | undefined;
};

const { as: Tag = "div", note, isPreview = false } = Astro.props;
---

<article
	class:list={[
		isPreview && "inline-grid rounded-md bg-[rgb(240,240,240)] px-4 py-3 dark:bg-[rgb(33,35,38)]",
	]}
	data-pagefind-body={isPreview ? false : true}
>
	<Tag class="title" class:list={{ "text-base": isPreview }}>
		{
			isPreview ? (
				<a class="link" href={`/notes/${note.slug}/`}>
					{note.title}
				</a>
			) : (
				<>{note.title}</>
			)
		}
	</Tag>
	<FormattedDate
		dateTimeOptions={{
			hour: "2-digit",
			minute: "2-digit",
			year: "2-digit",
			month: "2-digit",
			day: "2-digit",
		}}
		date={new Date(note.publishDate)}
	/>
	<div
		class="prose prose-sm prose-joel mt-4 max-w-none [&>p:last-of-type]:mb-0"
		class:list={{ "line-clamp-6": isPreview }}
	>
		<MarkdocRenderer client:load content={note.renderedContent} />
	</div>
</article>
