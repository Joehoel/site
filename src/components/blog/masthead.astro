---
import { Image } from "astro:assets";
import FormattedDate from "@/components/formatted-date.astro";
import type { Post } from "@/data/post";

interface Props {
	content: Post;
}

const { content: post } = Astro.props;
const { coverImage, draft, title, publishDate, updatedDate, tags } = post.data;

const dateTimeOptions: Intl.DateTimeFormatOptions = {
	month: "long",
};
---

{
	coverImage?.src && (
		<div class="mb-6 aspect-[16/9]">
			<Image
				class="object-cover"
				fetchpriority="high"
				loading="eager"
				src={coverImage.src}
				alt={coverImage.alt ?? ""}
				width={1200}
				height={675}
			/>
		</div>
	)
}
{
	draft ? (
		<span transition:name={`post-draft-${post.id}`} class="text-base text-red-500">
			(Draft)
		</span>
	) : null
}
<h1 class="title" transition:name={`post-title-${post.id}`}>
	{title}
</h1>
<div class="flex flex-wrap items-center gap-x-3 gap-y-2">
	<p class="font-semibold">
		<FormattedDate date={publishDate} dateTimeOptions={dateTimeOptions} /> /{" "}
		{/* @ts-ignore:next-line. TODO: add reading time to collection schema? */}
		{post.data.readingTime}
	</p>
	{
		updatedDate && (
			<span class="rounded-lg bg-quote/5 px-2 py-1 text-quote">
				Updated:
				<FormattedDate class="ms-1" date={updatedDate} dateTimeOptions={dateTimeOptions} />
			</span>
		)
	}
</div>
{
	!!tags?.length && (
		<div class="mt-2">
			<svg
				aria-hidden="true"
				class="inline-block h-6 w-6"
				fill="none"
				focusable="false"
				stroke="currentColor"
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="1.5"
				viewBox="0 0 24 24"
				xmlns="http://www.w3.org/2000/svg"
			>
				<path d="M0 0h24v24H0z" fill="none" stroke="none" />
				<path d="M7.859 6h-2.834a2.025 2.025 0 0 0 -2.025 2.025v2.834c0 .537 .213 1.052 .593 1.432l6.116 6.116a2.025 2.025 0 0 0 2.864 0l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-6.117 -6.116a2.025 2.025 0 0 0 -1.431 -.593z" />
				<path d="M17.573 18.407l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-7.117 -7.116" />
				<path d="M6 9h-.01" />
			</svg>
			{tags.map((tag, i) => (
				<>
					{/* prettier-ignore */}
					<span class="contents">
						<a aria-label={`View more blogs with the tag ${tag}`} class="link inline-block before:content-['#']" data-pagefind-filter="tag" href={`/tags/${tag}/`}>{tag}
						</a>{i < tags.length - 1 && ", "}
					</span>
				</>
			))}
		</div>
	)
}
